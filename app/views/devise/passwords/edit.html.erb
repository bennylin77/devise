<h3>更改密碼</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">密碼</label>
    <div class="col-sm-10">
  		<%= f.password_field :password, class: "form-control", placeholder: "密碼", autocomplete: "off"  %>  	
    </div>
  </div>  
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">密碼確認</label>
    <div class="col-sm-10">
  		<%= f.password_field :password_confirmation, class: "form-control", placeholder: "密碼確認", autocomplete: "off"  %>  	
    </div>
  </div>    
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "送出", class:"btn btn-default" %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
