<h3 class="text-center">更改密碼</h3>
<div class="container" >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="form-group">
    <label for="inputCurrentPassword" class="col-sm-offset-1 col-sm-2 control-label">目前密碼</label>
    <div class="col-sm-6">
    	<%= f.password_field :current_password, class: "form-control", placeholder: "目前密碼"%> 	
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-offset-1 col-sm-2 control-label">密碼</label>
    <div class="col-sm-6">
    	<%= f.password_field :password, class: "form-control", placeholder: "密碼"%> 
    </div>
  </div>
  <div class="form-group">
    <label for="inputPasswordConfirmation" class="col-sm-offset-1 col-sm-2 control-label">密碼確認</label>
    <div class="col-sm-6">
    	<%= f.password_field :password_confirmation, class: "form-control", placeholder: "密碼確認"%> 	
    </div>
  </div>  
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
      <%= f.submit "送出", class:"btn btn-default" %>
    </div>
  </div> 
<% end %>
</div>

