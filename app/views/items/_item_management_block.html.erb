<div class="item_management_box"  id="item_management_<%=item_management_block.id%>" >
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <%=link_to "/"+Hash[controllerOptions].rassoc(item_management_block.group.module).first+"/indexManagement?id="+item_management_block.id, {} do%> 	
	    <h3 class="panel-title"><%= item_management_block.group.title %></h3>
	    <%end%>	 
	  </div>
	  <div class="panel-body">
	    <%=link_to "/"+Hash[controllerOptions].rassoc(item_management_block.group.module).first+"/indexManagement?id="+item_management_block.id, {} do%>  	
		    <p><%= item_management_block.group.description%></p>
		    <div id="clock_<%=item_management_block.id%>"></div>
	  	<%end%> 
	   	<div class="container" style="width: 250px;">
		  	<div class="row">
		        <div class="pull-right"><%=item_management_block.created_at.strftime "%Y-%m-%d"%></div> 		
		  	</div>	
	  	</div>	 
	  </div>
	
	</div>		
</div>

<script type="text/javascript">
  $('#clock_<%=item_management_block.id%>').countdown('<%= item_management_block.end_at.strftime('%Y/%m/%d %H:%M:%S')%>', function(event) {
    $(this).html(event.strftime(''+
		'<span>%-w</span> 週 '+ 
		'<span>%-d</span> 天 '+ 
		'<span>%H</span> 時 '+
		'<span>%M</span> 分 '+ 
		'<span>%S</span> 秒 截止'));
  });
</script>    