<%=render "layouts/newStep" %>
<%= form_for @item, html: {class: "form-horizontal", role: "form"} do |f| %>
<% if @item.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

	<ul>
		<% @item.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="form-group">
	<label class="col-sm-2 control-label">模組</label>
	<div class="col-sm-10">
		<%= f.select :module, moduleOptions, {prompt: '請選擇模組'}, class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit '送出',  class: "btn btn-default"  %>
	</div>
</div>
<% end %>