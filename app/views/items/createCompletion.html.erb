<%=render "layouts/newStep" %>
  <div class="row">
    <div class="col-sm-12">
    完成建立, <%= @item.title %>
    </div>
    <div class="col-sm-12">
   	<div id="clock"></div> 報名開放
    </div>
  </div>

<script type="text/javascript">
  $('#clock').countdown('<%= @item.start_at.strftime('%Y/%m/%d %H:%M:%S')%>', function(event) {
    $(this).html(event.strftime(''+
		'<span>%-w</span> 週 '+ 
		'<span>%-d</span> 天 '+ 
		'<span>%H</span> 時 '+
		'<span>%M</span> 分 '+ 
		'<span>%S</span> 秒 '));
  });
</script>