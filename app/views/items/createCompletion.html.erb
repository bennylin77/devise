<%=render "layouts/newStep" %>
<div class="container-fluid">
  <div class="row">
 	<h1><small>剩</small><div id="clock"></div><small>開報報名</small></h1> 	  
  </div>
</div>
<script type="text/javascript">
  $('#clock').countdown('<%= @item.start_at.strftime('%Y/%m/%d %H:%M:%S')%>', function(event) {
    $(this).html(event.strftime(''+
		'<span>%-w</span> 週 '+ 
		'<span>%-d</span> 天 '+ 
		'<span>%H</span> 時 '+
		'<span>%M</span> 分 '+ 
		'<span>%S</span> 秒'));
  });
</script>