<%= render partial: "layouts/managementHeader", locals: {period: @period} %>
<%= render partial: "basic", locals: {period: @period} %>
<br><br>
<div class="container" >
<%= form_for @period, url: { controller: 'basic', action: "updatePeriod", id: @period.id }, method: 'post', html: {class: "form-horizontal", role: "form"} do |i| %>	
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">期數</label>
		<div class="col-sm-6">
			<%= i.text_field :term, class: "form-control", placeholder: "期數" %>
		</div>
	</div>		
	<%= i.fields_for :courses do |c| %>	
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">招生人數*</label>
		<div class="col-sm-6">
			<%= c.text_field :no_of_users, class: "form-control", placeholder: "招生人數" %>
		</div>
	</div>		
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">接受候補？</label>
		<div class="col-sm-6">
		<label class="radio-inline">
	  		<%=c.radio_button :waiting_available, "true"%>是			
		</label>
		<label class="radio-inline">
	 	 	<%=c.radio_button :waiting_available, "false"%>否		
		</label>			
		</div>
	</div>		
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">費用*</label>
		<div class="col-sm-6">
			<%= c.text_field :price, class: "form-control", placeholder: "費用" %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">報名費*</label>
		<div class="col-sm-6">
			<%= i.text_field :default_payment, class: "form-control", placeholder: "報名費" %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">地點*</label>
		<div class="col-sm-6">
			<%= c.text_field :location, class: "form-control", placeholder: "地點" %>
		</div>
	</div>	
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">課程開始時間*</label>
		<div class="col-sm-6">
			<%= c.text_field :start_at, value: c.object.start_at.strftime("%Y/%m/%d"), class: "form-control", id: 'datetimepicker1_start_at', placeholder: "課程開始時間" %>	
		</div>
		<script type="text/javascript">
			$(function () {
		    	$('#datetimepicker1_start_at').datetimepicker({				               
					format : 'YYYY/MM/DD'
				});
		    });
		</script>	
	</div>
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">課程結束時間*</label>
		<div class="col-sm-6">
			<%= c.text_field :end_at, value: c.object.end_at.strftime("%Y/%m/%d"), class: "form-control", id: 'datetimepicker2_end_at', placeholder: "課程結束時間" %>	
		</div>
		<script type="text/javascript">
			$(function () {
		    	$('#datetimepicker2_end_at').datetimepicker({
					format : 'YYYY/MM/DD'		                	
		        });
		    });
		</script>	
	</div>		
	<%end%>
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">報名對象*</label>
		<div class="col-sm-6">
			<%= i.text_field :eligibility, class: "form-control", placeholder: "報名對象" %>	
		</div>
	</div>	
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">報名開放時間*</label>
		<div class="col-sm-6">
			<%= i.text_field :start_at, class: "form-control", id: 'datetimepicker_start_at', placeholder: "報名開放時間" %>	
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">報名結束時間*</label>
		<div class="col-sm-6">
			<%= i.text_field :end_at, class: "form-control", id: 'datetimepicker_end_at', placeholder: "報名結束時間" %>	
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-offset-1 col-sm-2 control-label">注意事項</label>
		<div class="col-sm-6">
			<%= i.text_area :precautions, class: "form-control", placeholder: "注意事項" %>	
		</div>
	</div>		
	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-6">
			<%= i.submit '儲存',  class: "btn btn-primary"  %>
		</div>
	</div>
<% end %>
</div>
<script type="text/javascript">
	$(function () {
		$('#datetimepicker_start_at, #datetimepicker_end_at, #datetimepicker_payment_start_at, #datetimepicker_payment_end_at').datetimepicker({
			format : 'YYYY/MM/DD HH:mm'		
	    });   	    
	});
</script>	