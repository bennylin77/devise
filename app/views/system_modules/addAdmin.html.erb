<div class="container" >
<%= form_tag '/system_modules/addAdmin', { class: "form-horizontal", role: "form"} do %>		
	<%= hidden_field_tag :id, @system_module.id, class: "form-control" %>
	<div class="form-group">
	<label class="col-sm-offset-1 col-sm-2 control-label">會員信箱</label>
	<div class="col-sm-6">
		<%= text_field_tag :email, '',class: "form-control", placeholder: "會員信箱"  %>
	</div>
	</div>
	<div class="form-group">
	<div class="col-sm-offset-3 col-sm-6">
		<%= submit_tag '送出',  class: "btn btn-default"  %>
	</div>
	</div>
<% end %>
</div>