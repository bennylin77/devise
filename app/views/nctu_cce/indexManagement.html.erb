<%= render partial: "layouts/managementHeader", locals: {period: @period} %>
<div class="container-fluid">
	<div class="row">	
		<div class="col-sm-2">
			<%=link_to '刪除培訓班', {controller: 'nctu_cce', action: 'destroy', id: @period.id}, class: 'btn btn-danger', data: { confirm: '您確定要刪除此培訓班？' } %>	
			<%=link_to '匯出帳單表', "/periods/export_vaccounts.xls?id=#{@period.id}", class: 'btn btn-info' %>		
		</div>
		<ul class="nav nav-pills col-sm-offset-8 col-sm-2">
		  <li role="presentation">
		  	<%=link_to '管理學員', {controller: 'nctu_cce', action: 'sendMessage', id: @period.id} %>
		  </li>						
		  <li role="presentation">
		  	<%=link_to '設定', {controller: 'nctu_cce', action: 'editGroup', id: @period.group.id} %>
		  </li>	  
		</ul>	
	</div>
</div>
<br>
<div class="table-responsive">
<table class="table table-striped table-hover ">
  <tr>
    <th>姓名</th>
    <th>聯絡電話</th>
    <th>email</th>
    <th>虛擬帳號</th>
    <th>內涵金額/須繳金額</th>     
    <th>報名進度</th>           
  </tr>	
<%@progresses.each do |p|%>
<tr id='link1' onclick="document.location='<%=host%>nctu_cce/showProgress?id=<%=p.id%>';">
    <td><%=p.user.name%></td>
    <td><%=p.user.phone_no%></td>
    <td><%=p.user.email%></td>
	<td><%if p.vaccount %><%=p.vaccount.vacc %><%end%></td>
	<td><%if p.vaccount %><%=(p.vaccount.status) ? p.vaccount.status["Amount"] : 0.0 %> NT/<%=p.payment.to_s%> NT<%end%></td>      
    <td><%=CCEStageText p.stage%></td> 
</tr>
<%end%>
</table>
</div>
<div class="pagination">
  <%= will_paginate @progresses, renderer: BootstrapPagination::Rails %>
</div>