<%= render partial: "layouts/managementHeader", locals: {item: @item} %>
<div class="container-fluid">
	<div class="row">	
		<div class="col-sm-2">
			<%=link_to '刪除培訓班', {controller: 'nctu_cce', action: 'destroy', id: @item.id}, class: 'btn btn-danger', data: { confirm: '您確定要刪除此培訓班？' } %>		
		</div>
		<ul class="nav nav-pills col-sm-offset-6 col-sm-4">
		  <li role="presentation">
		  	<%=link_to '群組寄信', {controller: 'nctu_cce', action: 'sendMessage', id: @item.id} %>
		  </li>			
		  <li role="presentation">
		  	<%=link_to '名稱簡介設定', {controller: 'nctu_cce', action: 'editGroup', id: @item.group.id} %>
		  </li>
		  <li role="presentation">
			<%=link_to '基本資料設定', {controller: 'nctu_cce', action: 'editItem', id: @item.id} %>		  	
		  </li>  
		</ul>	
	</div>
</div>
<br>
<table class="table table-striped table-hover ">
  <tr>
    <th>姓名</th>
    <th>聯絡電話</th>
    <th>email</th>
    <th>報名進度</th>   
    <th>候補狀態</th>         
  </tr>	
<%@progresses.each do |p|%>
<tr id='link1' onclick="document.location='<%=host%>nctu_cce/showProgress?id=<%=p.id%>';">
    <td><%=p.user.name%></td>
    <td><%=p.user.phone_no%></td>
    <td><%=p.user.email%></td>
    <td><%=stageText p.stage%></td>
    <%if p.waiting%>
    <td>候補 <%=p.waiting_no%></td>
    <%else%>
    <td>非候補</td>
    <%end%>    
</tr>
<%end%>
</table>

<div class="pagination">
  <%= will_paginate @progresses, renderer: BootstrapPagination::Rails %>
</div>