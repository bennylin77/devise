<%= render partial: "layouts/managementHeader", locals: {item: @item} %>
<div class="container-fluid">
	<div class="row">	
		<div class="col-sm-4">
			<%=link_to '刪除培訓班', {controller: 'nctu_cce', action: 'destroy', id: @item.id}, class: 'btn btn-danger', data: { confirm: '您確定要刪除此培訓班？' } %>	
			 <%=link_to '匯出帳單表', "/items/export_vaccounts.xls?id=#{@item.id}", class: 'btn btn-info' %>		
		</div>
		<ul class="nav nav-pills col-sm-offset-4 col-sm-4">
		  <li role="presentation">
		  	<%=link_to '問卷管理', {controller: 'nctu_cce', action: 'editFeedback', id: @item.id} %>
		  </li>				
		  <li role="presentation">
		  	<%=link_to '成績管理', {controller: 'nctu_cce', action: 'editScore', id: @item.id} %>
		  </li>					
		  <li role="presentation">
		  	<%=link_to '群組寄信', {controller: 'nctu_cce', action: 'sendMessage', id: @item.id} %>
		  </li>			
		  <li role="presentation">
		  	<%=link_to '名稱簡介', {controller: 'nctu_cce', action: 'editGroup', id: @item.group.id} %>
		  </li>
		  <li role="presentation">
			<%=link_to '基本資料', {controller: 'nctu_cce', action: 'editItem', id: @item.id} %>		  	
		  </li>  
		</ul>	
	</div>
</div>
<br>
<div class="table-responsive">
<table class="table table-striped table-hover ">
  <tr>
    <th>姓名</th>
    <th>聯絡電話</th>
    <th>email</th>
    <th>虛擬帳號</th>
    <th>內涵金額/須繳金額</th>     
    <th>報名進度</th>   
    <th>候補狀態</th>         
  </tr>	
<%@progresses.each do |p|%>
<tr id='link1' onclick="document.location='<%=host%>nctu_cce/showProgress?id=<%=p.id%>';">
    <td><%=p.user.name%></td>
    <td><%=p.user.phone_no%></td>
    <td><%=p.user.email%></td>
	<td><%if p.vaccount %><%=p.vaccount.vacc %><%end%></td>
	<td><%if p.vaccount %><%=(p.vaccount.status) ? p.vaccount.status["Amount"] : 0.0 %>/<%=p.payment.to_s%><%end%></td>      
    <td><%=CCEStageText p.stage%></td>
    <%if p.waiting%>
    <td>候補 <%=p.waiting_no%></td>
    <%else%>
    <td>非候補</td>
    <%end%>    
</tr>
<%end%>
</table>
</div>
<div class="pagination">
  <%= will_paginate @progresses, renderer: BootstrapPagination::Rails %>
</div>