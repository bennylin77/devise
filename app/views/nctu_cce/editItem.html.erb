<%= render partial: "layouts/managementHeader", locals: {item: @item} %>
<div class="container" style="margin-bottom: 20px;">
  <div class="row">
	<h3 class="col-sm-5 col-sm-offset-1">基本資料設定</h3>
  </div>
</div>
<%= form_for @item, url: { controller: 'nctu_cce', action: "updateItem", id: @item.id }, method: 'post', html: {class: "form-horizontal", role: "form"} do |i| %>
	
	<div class="form-group">
		<label class="col-sm-2 control-label">學年</label>
		<div class="col-sm-3">
			<%= i.select :school_year, options_for_select([[Time.now.year-1912, Time.now.year-1912], 
														   [Time.now.year-1911, Time.now.year-1911],			
														   [Time.now.year-1910, Time.now.year-1910],	
														   [Time.now.year-1909, Time.now.year-1909]], @item.school_year), {prompt: '學年'}, class: "form-control" %>		
		</div>
		<label class="col-sm-1 control-label">學期</label>
		<div class="col-sm-2">
			<%= i.select :semester, options_for_select([["一", 1], ["二", 2]], @item.semester), {prompt: '學期'}, class: "form-control" %>		
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">期數</label>
		<div class="col-sm-6">
			<%= i.text_field :term, class: "form-control", placeholder: "期數" %>
		</div>
	</div>		
	<div class="form-group">
		<label class="col-sm-2 control-label">招生人數*</label>
		<div class="col-sm-6">
			<%= i.text_field :no_of_user, class: "form-control", placeholder: "招生人數" %>
		</div>
	</div>
	<div class="form-group">	
		<label class="col-sm-2 control-label">接受備取*</label>	
		<div class="col-sm-6">
		<label class="radio-inline ">
			<%=i.radio_button :waiting_available, "true", checked: true %>是
		</label>
		<label class="radio-inline ">
			<%=i.radio_button :waiting_available, "false" %>否
		</label>
		</div>
	</div>		
	<div class="form-group">
		<label class="col-sm-2 control-label">學費*</label>
		<div class="col-sm-6">
			<%= i.text_field :price, class: "form-control", placeholder: "學費" %>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">報名開放時間*</label>
		<div class="col-sm-6">
			<%= i.text_field :start_at, class: "form-control", id: 'datetimepicker_start_at', placeholder: "報名開放時間" %>	
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">報名結束時間*</label>
		<div class="col-sm-6">
			<%= i.text_field :end_at, class: "form-control", id: 'datetimepicker_end_at', placeholder: "報名結束時間" %>	
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">繳費開放時間*</label>
		<div class="col-sm-6">
			<%= i.text_field :payment_start_at, class: "form-control", id: 'datetimepicker_payment_start_at', placeholder: "繳費開放時間" %>	
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">繳費結束時間*</label>
		<div class="col-sm-6">
			<%= i.text_field :payment_end_at, class: "form-control", id: 'datetimepicker_payment_end_at', placeholder: "繳費結束時間" %>	
		</div>
	</div>


<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= i.submit '送出',  class: "btn btn-default"  %>
	</div>
</div>
<% end %>

<script type="text/javascript">
	$(function () {
		$('#datetimepicker_start_at, #datetimepicker_end_at, #datetimepicker_payment_start_at, #datetimepicker_payment_end_at').datetimepicker({
			use24hours : true,
			format : 'YYYY/MM/DD HH:mm'		
	    });   	    
	});
</script>	