<div class="container-fluid">
	<div class="row">	
		<div class="">
		<%unless @progress.verified%>	
		<button type="button" class="btn btn-info" onclick="document.location='<%=host%>/nctu_cce/verified?id=<%=@progress.id%>';">審核通過</button>		
		<%else%>
		<button type="button" class="btn btn-info" onclick="document.location='<%=host%>/nctu_cce/verified?id=<%=@progress.id%>';">取消資格</button>				
		<%end%>
		</div>
	</div>
</div>
<div class="container">
<div class="row">
  <div class="col-md-4">姓名</div>
  <div class="col-md-8"><%=@progress.user.name%></div>
</div>
<div class="row">
  <div class="col-md-4">出生年月日</div>
  <div class="col-md-8"><%=@progress.user.birthday%></div>
</div>
<div class="row">
  <div class="col-md-4">性別</div>
  <div class="col-md-8"><%=@progress.user.gender%></div>
</div>
<div class="row">
  <div class="col-md-4">身分證字號</div>
  <div class="col-md-8"><%=@progress.user.id_no_TW%></div>
</div>
<div class="row">
  <div class="col-md-4">聯絡電話</div>
  <div class="col-md-8"><%=@progress.user.phone_no%></div>
</div>
<div class="row">
  <div class="col-md-4">聯絡地址</div>
  <div class="col-md-8"><%=@progress.user.county%><%=@progress.user.district%><%=@progress.user.address%></div>
</div>
<div class="row">
  <div class="col-md-4">審核狀態</div>
  <div class="col-md-8"><%=@progress.verified%></div>
</div>
</div>
