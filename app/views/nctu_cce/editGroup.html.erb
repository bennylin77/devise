<%= render partial: "layouts/managementHeader", locals: {item: @group.items.first} %>
<div class="container" style="margin-bottom: 20px;">
  <div class="row">
	<h3 class="col-sm-5 col-sm-offset-1">名稱簡介設定</h3>
  </div>
</div>
<%= form_for @group, url: { controller: 'nctu_cce', action: "updateGroup", id: @group.id }, method: 'post', html: {class: "form-horizontal", role: "form"} do |g| %>	
<div class="form-group">
	<label class="col-sm-2 control-label">課程名稱*</label>
	<div class="col-sm-6">
		<%= g.text_field :title, class: "form-control", placeholder: "課程名稱" %>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">課程簡介*</label>
	<div class="col-sm-6">
		<%= g.text_area :description, class: "form-control", placeholder: "課程簡介" %>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= g.submit '送出',  class: "btn btn-default"  %>
	</div>
</div>
<% end %>