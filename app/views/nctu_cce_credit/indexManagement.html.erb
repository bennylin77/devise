<%= render partial: "layouts/managementHeader", locals: {item: @item} %>
<div class="container-fluid">
	<div class="row">	
		<ul class="nav nav-tabs col-md-3">
		  <li role="presentation" class="active"><a href="#">報名學員表</a></li>
		</ul>
		<ul class="nav nav-pills col-md-offset-5  col-md-4">
		  <li role="presentation">
		  	<%=link_to '群組寄信', {controller: 'nctu_cce_credit', action: 'sendMessage', id: @item.id}%>
		  </li>			
		  <li role="presentation">
		  	<%=link_to '名稱簡介設定', {controller: 'nctu_cce_credit', action: 'editGroup', id: @item.group.id} %>
		  </li>
		  <li role="presentation">
			<%=link_to '基本資料設定', {controller: 'nctu_cce_credit', action: 'editItem', id: @item.id} %>		  	
		  </li>
		  <li role="presentation">
			<%=link_to '課程設定', {controller: 'nctu_cce_credit', action: 'editCourses', id: @item.id} %>		  	
		  </li>		  
		</ul>		
	</div>
</div>
<br>
<table class="table table-striped table-hover ">
  <tr>
    <th>姓名</th>
    <th>聯絡電話</th>
    <th>email</th>
    <th>報名進度</th>   
    <th>候補狀態</th>         
  </tr>	
<%@progresses.each do |p|%>
<tr id='link1' onclick="document.location='<%=host%>nctu_cce_credit/showProgress?id=<%=p.id%>';">
    <td><%=p.user.name%></td>
    <td><%=p.user.phone_no%></td>
    <td><%=p.user.email%></td>
    <td><%=stageText p.stage%></td>
    <%if p.waiting%>
    <td>候補 <%=p.waiting_no%></td>
    <%else%>
    <td>非候補</td>
    <%end%>    
</tr>
<%end%>
</table>

<div class="pagination">
  <%= will_paginate @progresses, renderer: BootstrapPagination::Rails %>
</div>